{{> header}}

<main>
  <article>
    <h2>{{post.title}}</h2>
    <p>By {{post.user.username}} on {{post.createdAt}}</p>
    <p>{{post.content}}</p>
  </article>

  {{#if logged_in}}
  <section>
    <h3>Comments</h3>
    {{#each post.comments}}
    <div class="comment">
      <p>{{this.comment_text}}</p>
      <p>By {{this.user.username}} on {{this.createdAt}}</p>
    </div>
    {{/each}}

    <form id="comment-form">
      <div>
        <label for="comment-text">Add a Comment:</label>
        <textarea id="comment-text" name="comment-text" required></textarea>
      </div>
      <button type="submit">Submit</button>
    </form>
  </section>
  {{else}}
  <p><a href="/login">Login</a> or <a href="/signup">Sign Up</a> to leave a comment.</p>
  {{/if}}
</main>

<script src="/js/comment.js"></script>

{{> footer}}
